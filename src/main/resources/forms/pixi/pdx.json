{
  "display": "form",
  "title": "Patient Derived Xenograft",
  "components": [
    {
      "label": "Columns",
      "columns": [
        {
          "components": [
            {
              "label": "PDX ID",
              "description": "The original ID at the data source providing this PDX model line. Example: WHIM20",
              "tableView": true,
              "validate": {
                "required": true
              },
              "key": "externalID",
              "type": "textfield",
              "input": true
            }
          ],
          "width": 6,
          "offset": 0,
          "push": 0,
          "pull": 0,
          "size": "md",
          "currentWidth": 6
        },
        {
          "components": [
            {
              "label": "Source",
              "description": "The source providing this PDX model line. Example: WUSTL",
              "tableView": true,
              "key": "dataSource",
              "type": "textfield",
              "input": true
            },
            {
              "label": "PDX URL",
              "description": "Link to this PDX at the data source provider (if available).",
              "tableView": true,
              "key": "dataSourceURL",
              "type": "url",
              "input": true
            },
            {
              "type": "button",
              "label": "Submit",
              "key": "submit",
              "disableOnInvalid": true,
              "input": true,
              "tableView": false
            }
          ],
          "width": 6,
          "offset": 0,
          "push": 0,
          "pull": 0,
          "size": "md",
          "currentWidth": 6
