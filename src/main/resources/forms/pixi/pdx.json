{
  "display": "form",
  "title": "PDX",
  "settings": {},
  "components": [
    {
      "html": "<h4>Register a Patient Derived Xenograft (PDX)</h4>",
      "label": "Content",
      "refreshOnChange": false,
      "key": "content",
      "type": "content",
      "input": false,
      "tableView": false
    },
    {
      "label": "PDX Name",
      "description": "Enter a name which describes this PDX",
      "tableView": true,
      "validate": {
        "required": true
      },
      "key": "pdx.pdxLabel",
      "type": "textfield",
      "input": true
    },
    {
      "label": "PDX ID",
      "description": "Create a unique one word PDX identifier. This is used in the database and cannot be changed.",
      "tableView": true,
      "validate": {
        "required": true
      },
      "key": "pdx.pdxID",
      "type": "textfield",
      "input": true
    },
    {
      "title": "Patient",
      "collapsible": false,
      "key": "patient",
      "type": "panel",
      "label": "Panel",
      "input": false,
      "tableView": false,
      "components": [
        {
          "label": "Submitter Patient ID",
          "description": "The original ID at the datasource providing the Patient data",
          "tableView": true,
          "key": "pdx.patient.submitterPatientID",
          "type": "textfield",
          "input": true
        },
        {
          "label": "Age",
          "tableView": true,
          "key": "pdx.patient.age",
          "type": "textfield",
          "input": true
        },
        {
          "label": "Gender",
          "widget": "choicesjs",
          "tableView": true,
          "data": {
            "values": [
              {
                "label": "Male",
                "value": "MALE"
              },
              {
                "label": "Female",
                "value": "FEMALE"
              }
            ]
          },
          "selectThreshold": 0.3,
          "key": "pdx.patient.gender",
          "type": "select",
          "input": true
        },
        {
          "label": "Ethnicity/Race",
          "widget": "choicesjs",
          "tableView": true,
          "data": {
            "values": [
              {
                "label": "White",
                "value": "white"
              },
              {
                "label": "African American",
                "value": "african american"
              },
              {
                "label": "Hispanic or Latino",
                "value": "hispanic or latino"
              },
              {
                "label": "Asian or Pacific Islander",
                "value": "asian or pacific islander"
              },
              {
                "label": "Native American or Alaskan Native",
                "value": "native american or alaskan native"
              },
              {
                "label": "Multiracial or Biracial",
                "value": "multiracial or biracial"
              },
              {
                "label": "A race or ethnicity not listed here",
                "value": "other"
              }
            ]
          },
          "key": "pdx.patient.ethnicityRace",
          "type": "select",
          "input": true
        },
        {
          "label": "Consent To Share",
          "widget": "choicesjs",
          "tableView": true,
          "data": {
            "values": [
              {
                "label": "Yes",
                "value": "yes"
              },
              {
                "label": "No",
                "value": "no"
              },
              {
                "label": "Available to Academic Centers Only",
                "value": "Available to Academic Centers Only"
              }
            ]
          },
          "key": "pdx.patient.consentToShare",
          "type": "select",
          "input": true
        },
        {
          "label": "Diagnosis",
          "tableView": true,
          "key": "pdx.patient.diagnosis",
          "type": "textfield",
          "input": true
        },
        {
          "label": "Columns",
          "columns": [
            {
              "components": [
                {
                  "label": "Current Treatment Drug",
                  "tableView": true,
                  "key": "pdx.patient.currentTreatmentDrug",
                  "type": "textfield",
                  "input": true
                },
                {
                  "label": "Current Treatment Protocol",
                  "description": "Dose and details",
                  "tableView": true,
                  "key": "pdx.patient.currentTreatmentProtocol",
                  "type": "textfield",
                  "input": true
                }
              ],
              "width": 6,
              "offset": 0,
              "push": 0,
              "pull": 0,
              "size": "md",
              "currentWidth": 6
            },
            {
              "components": [
                {
                  "label": "Prior Treatment Protocol",
                  "description": "Drugs, doses, and details.",
                  "tableView": true,
                  "key": "pdx.patient.priorTreatmentProtocol",
                  "type": "textfield",
                  "input": true
                },
                {
                  "label": "Prior Treatment Response",
                  "widget": "choicesjs",
                  "description": "RECIST 1.1",
                  "tableView": true,
                  "data": {
                    "values": [
                      {
                        "label": "Complete Response",
                        "value": "CR"
                      },
                      {
                        "label": "Partial Response",
                        "value": "PR"
                      },
                      {
                        "label": "Progressive Disease",
                        "value": "PD"
                      },
                      {
                        "label": "Stable Disease",
                        "value": "SD"
                      }
                    ]
                  },
                  "key": "pdx.patient.priorTreatmentResponse",
                  "type": "select",
                  "input": true
                }
              ],
              "width": 6,
              "offset": 0,
              "push": 0,
              "pull": 0,
              "size": "md",
              "currentWidth": 6
            }
          ],
          "key": "columns",
          "type": "columns",
          "input": false,
          "tableView": false
        },
        {
          "label": "Virology Status",
          "description": "Example: HIV-/HBV-/HCV+/HTLV-/EBV+",
          "tableView": true,
          "key": "pdx.patient.virologyStatus",
          "type": "textfield",
          "input": true
        }
      ]
    },
    {
      "title": "Tumor",
      "collapsible": false,
      "key": "tumor",
      "type": "panel",
      "label": "Panel",
      "input": false,
      "tableView": false,
      "components": [
        {
          "label": "Submitter Tumor ID",
          "tableView": true,
          "key": "pdx.tumor.submitterTumorID",
          "type": "textfield",
          "input": true
        },
        {
          "label": "Primary Tumor Tissue Origin",
          "tableView": true,
          "key": "pdx.tumor.primaryTumorTissueOrigin",
          "type": "textfield",
          "input": true
        },
        {
          "label": "Turmor Type",
          "widget": "choicesjs",
          "tableView": true,
          "data": {
            "values": [
              {
                "label": "Primary",
                "value": "primary"
              },
              {
                "label": "Metastasis",
                "value": "metastasis"
              },
              {
                "label": "Recurrence",
                "value": "recurrence"
              }
            ]
          },
          "key": "pdx.tumor.turmorType",
          "type": "select",
          "input": true
        },
        {
          "label": "Specimen Tumor Tissue",
          "tableView": true,
          "key": "pdx.tumor.specimenTumorTissue",
          "type": "textfield",
          "input": true
        },
        {
          "label": "Tissue Histology",
          "tableView": true,
          "key": "pdx.tumor.tissueHistology",
          "type": "textfield",
          "input": true
        },
        {
          "label": "Columns",
          "columns": [
            {
              "components": [
                {
                  "label": "Tumor Grade",
                  "tableView": true,
                  "key": "pdx.tumor.tumorGrade",
                  "type": "textfield",
                  "input": true
                },
                {
                  "label": "Disease Stage",
                  "tableView": true,
                  "key": "pdx.tumor.diseaseStage",
                  "type": "textfield",
                  "input": true
                },
                {
                  "label": "Specific Markers",
                  "description": "Diagnostic linked",
                  "tableView": true,
                  "key": "pdx.tumor.specificMarkers",
                  "type": "textfield",
                  "input": true
                }
              ],
              "width": 6,
              "offset": 0,
              "push": 0,
              "pull": 0,
              "size": "md",
              "currentWidth": 6
            },
            {
              "components": [
                {
                  "label": "Tumor Classification System",
                  "tableView": true,
                  "key": "pdx.tumor.tumorClassification",
                  "type": "textfield",
                  "input": true
                },
                {
                  "label": "Disease Classification System",
                  "tableView": true,
                  "key": "pdx.tumor.diseaseClassification",
                  "type": "textfield",
                  "input": true
                },
                {
                  "label": "Specific Markers Platform",
                  "tableView": true,
                  "key": "pdx.tumor.specificMarkersPlatform",
                  "type": "textfield",
                  "input": true
                }
              ],
              "width": 6,
              "offset": 0,
              "push": 0,
              "pull": 0,
              "size": "md",
              "currentWidth": 6
            }
          ],
          "key": "columns1",
          "type": "columns",
          "input": false,
          "tableView": false
        },
        {
          "label": "Is Tumor From Untreated Patient?",
          "widget": "choicesjs",
          "tableView": true,
          "data": {
            "values": [
              {
                "label": "Yes",
                "value": "true"
              },
              {
                "label": "No",
                "value": "false"
              }
            ]
          },
          "selectThreshold": 0.3,
          "key": "pdx.tumor.fromUntreatedPatient",
          "type": "select",
          "input": true
        },
        {
          "label": "Original Tumor Sample Type",
          "description": "Biopsy, surgical sample, ascites fluid, blood, etc.",
          "tableView": true,
          "key": "pdx.tumor.originalTumorSampleType",
          "type": "textfield",
          "input": true
        },
        {
          "label": "Is Tumor From an Existing PDX Model?",
          "widget": "choicesjs",
          "tableView": true,
          "data": {
            "values": [
              {
                "label": "Yes",
                "value": "true"
              },
              {
                "label": "No",
                "value": "false"
              }
            ]
          },
          "key": "pdx.tumor.isTumorFromAnExistingPdxModel",
          "type": "select",
          "input": true
        },
        {
          "label": "Columns",
          "columns": [
            {
              "components": [
                {
                  "label": "PDX ID",
                  "widget": "choicesjs",
                  "tableView": true,
                  "dataSrc": "url",
                  "data": {
                    "url": "$siteUrl/xapi/pixi/pdx",
                    "headers": [
                      {
                        "key": "",
                        "value": ""
                      }
                    ]
                  },
                  "valueProperty": "pdxID",
                  "template": "<span>{{ item.pdxID }}</span>",
                  "key": "pdx.tumor.derivedPDXModelID",
                  "conditional": {
                    "show": true,
                    "when": "isTumorFromAnExistingPdxModel",
                    "eq": "true"
                  },
                  "type": "select",
                  "input": true,
                  "disableLimit": false
                }
              ],
              "width": 6,
              "offset": 0,
              "push": 0,
              "pull": 0,
              "size": "md",
              "currentWidth": 6
            },
            {
              "components": [
                {
                  "label": "Why subline?",
                  "tableView": true,
                  "key": "pdx.tumor.derivedPDXReason",
                  "conditional": {
                    "show": true,
                    "when": "isTumorFromAnExistingPdxModel",
                    "eq": "true"
                  },
                  "type": "textfield",
                  "input": true
                }
              ],
              "width": 6,
              "offset": 0,
              "push": 0,
              "pull": 0,
              "size": "md",
              "currentWidth": 6
            }
          ],
          "key": "columns2",
          "type": "columns",
          "input": false,
          "tableView": false
        }
      ]
    },
    {
      "label": "Submit",
      "disableOnInvalid": true,
      "tableView": false,
      "key": "submit",
      "type": "button",
      "input": true,
      "saveOnEnter": false
    }
  ]
}