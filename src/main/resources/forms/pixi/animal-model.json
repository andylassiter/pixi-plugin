{
  "display": "form",
  "title": "Animal Model",
  "settings": {},
  "components": [
    {
      "html": "<h4>Animal Model</h4>",
      "label": "Content",
      "refreshOnChange": false,
      "key": "content",
      "type": "content",
      "input": false,
      "tableView": false
    },
    {
      "label": "Animal Model",
      "description": "Enter the full name of your Animal Model",
      "tableView": true,
      "validate": {
        "required": true
      },
      "key": "animalModelName",
      "type": "textfield",
      "input": true
    },
    {
      "label": "Animal Model ID",
      "description": "Create a unique one word Animal Model identifier. This is used in the database and cannot be changed.",
      "tableView": true,
      "validate": {
        "required": true
      },
      "key": "id",
      "type": "textfield",
      "input": true
    },
    {
      "label": "PDXs",
      "widget": "choicesjs",
      "description": "Associate your Animal Model with one or more Patient Derived Xenografts",
      "tableView": true,
      "multiple": true,
      "dataSrc": "url",
      "data": {
        "url": "$siteUrl/xapi/pixi/pdx",
        "headers": [
          {
            "key": "",
            "value": ""
          }
        ]
      },
      "valueProperty": "id",
      "template": "<span>{{ item.id }}</span>",
      "selectThreshold": 0.3,
      "key": "pdxIDs",
      "type": "select",
      "input": true,
      "lazyLoad": false,
      "disableLimit": false
    },
    {
      "label": "Passage",
      "tableView": true,
      "key": "passage",
      "type": "textfield",
      "input": true
    },
    {
      "label": "Is Immune System Humanized",
      "optionsLabelPosition": "right",
      "inline": false,
      "tableView": false,
      "values": [
        {
          "label": "Yes",
          "value": "true",
          "shortcut": ""
        },
        {
          "label": "No",
          "value": "false",
          "shortcut": ""
        }
      ],
      "dataType": "boolean",
      "key": "isImmuneSystemHumanized",
      "type": "radio",
      "input": true
    },
    {
      "label": "Humanization Type",
      "widget": "choicesjs",
      "uniqueOptions": true,
      "tableView": true,
      "data": {
        "values": [
          {
            "label": "CD34 Positive Hematopoietic Stem Cell-Engrafted",
            "value": "cd34PositiveHematopoieticStemCellEngrafted"
          },
          {
            "label": "PDMC",
            "value": "pdmc"
          },
          {
            "label": "Thymus",
            "value": "thymus"
          },
          {
            "label": "Thymus-Fetal Liver",
            "value": "thymusFetalLiver"
          },
          {
            "label": "iPSC",
            "value": "iPsc"
          },
          {
            "label": "Other",
            "value": "other"
          }
        ]
      },
      "key": "humanizationType",
      "type": "select",
      "input": true
    },
    {
      "label": "Other Humanization Type",
      "tableView": true,
      "key": "otherHumanizationType",
      "conditional": {
        "show": true,
        "when": "humanizationType",
        "eq": "other"
      },
      "type": "textfield",
      "input": true
    },
    {
      "label": "Submit",
      "disableOnInvalid": true,
      "tableView": false,
      "key": "submit",
      "type": "button",
      "input": true,
      "saveOnEnter": false
    }
  ]
}