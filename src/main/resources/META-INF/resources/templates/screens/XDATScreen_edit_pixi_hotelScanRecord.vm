        <script>
            function changeHotelSession(){
                XNAT.dialog.open({
                    title: 'Page Reload Required',
                    width: 350,
                    content: '<p>A page reload is required to change the session associated with this scan record. Any edits on this page will be lost.</p>',
                    buttons: [
