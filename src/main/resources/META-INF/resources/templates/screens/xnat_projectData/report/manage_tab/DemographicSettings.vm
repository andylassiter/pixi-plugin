<h3>Demographic Settings</h3>
<div>
    <table id="demographic_settings_table">
        <tr>
            <td>
                <input type="text" id="preferred_demographic" name="preferred_demographic">
                <button onclick="saveDemographics()">Save</button>
            </td>
        </tr>
    </table>

    <script>
        var XNAT = getObject(XNAT || {});

        function saveDemographics() {
            var preferredDemographic = document.getElementById("preferred_demographic").value;

            XNAT.xhr.ajax({
                url: XNAT.url.csrfUrl('/data/projects/'+XNAT.data.context.projectID+'/config/demographics/'+preferredDemographic),
                method: "PUT",
                success: function(){
                    console.log("Success")
                },
                fail: function(e){
                    console.log("fail")
                }
            })
        }
    </script>
</div>


